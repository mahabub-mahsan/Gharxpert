@model GharXpertWeb.Models.Dto.CustomerDTO
<form asp-action="DeleteCustomer">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Customer</h1>
        <hr />
        <input hidden asp-for="CustomerId" />

        <div class="row">

            <div class="col-2">
                <label asp-for="CName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="CName" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Mobile" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Mobile" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Address" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Address" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="City" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="City" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Email" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Email" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Landline" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Landline" disabled class="form-control" />
            </div>


            <div class="col-5 offset-2">
                <a asp-action="IndexCustomer" asp-controller="Customer" class="btn-primary btn form-control">Back To List</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}