@model GharXpertWeb.Models.Dto.WorkUpdateDTO
<form asp-action="UpdateWork">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Update Work</h1>
        <hr />
        <input hidden asp-for="Id" />
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="Id" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="WorkName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="WorkName" class="form-control" />
                <span asp-validation-for="WorkName" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="WorkDescription" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="WorkDescription" class="form-control" />
                <span asp-validation-for="WorkDescription" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="WorkImage" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="WorkImage" class="form-control" rows="5" />
                <span asp-validation-for="WorkImage" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="WorkIsActive" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="WorkIsActive" class="form-check-label" />
                <span asp-validation-for="WorkIsActive" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="UserId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="UserId" class="form-control" rows="5" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexWork" asp-controller="Work" class="btn-primary btn form-control">Back To List</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Update" class="btn-success form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}