@model IEnumerable<GharXpertWeb.Models.Dto.WorkDTO>
<br />
<div class=" container p-4 border">
    <div class=" row pb-2">
        <div class="col">
            <h1 class="text-primary">Work List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-contoller="Work" asp-action="CreateWork" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New Work</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Work Name
                    </th>
                    <th>
                        Work Desc
                    </th>
                    <th>
                        Work Image
                    </th>
                    <th>
                        Work IsActive
                    </th>
                    <th>
                        UserId
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.WorkName</td>
                        <td>@item.WorkDescription</td>
                        <td>@item.WorkImage</td>
                        <td>@item.WorkIsActive</td>
                        <td>@item.UserId</td>
                        <td>
                            <a asp-contoller="Work" asp-action="UpdateWork" asp-route-workId="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i> </a>
                            <a asp-contoller="Work" asp-action="DeleteWork" asp-route-workId="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i> </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
