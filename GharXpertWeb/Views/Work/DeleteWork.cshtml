@model GharXpertWeb.Models.Dto.WorkDTO

<form asp-action="DeleteWork">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Work</h1>
        <hr />
        <input hidden asp-for="Id" />
        <div class="row">

            <div class="col-2">
                <label asp-for="Id" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Id" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="WorkName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="WorkName" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="WorkDescription" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="WorkDescription" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="WorkImage" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="WorkImage" disabled class="form-control" rows="5" />
            </div>

            <div class="col-2">
                <label asp-for="WorkIsActive" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="WorkIsActive" disabled class="form-check-label" />
            </div>

            <div class="col-2">
                <label asp-for="UserId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="UserId" disabled class="form-control" rows="5" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexWork" asp-controller="Work" class="btn-primary btn form-control">Back To List</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
