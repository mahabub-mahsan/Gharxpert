@model GharXpertWeb.Models.Dto.ConstructionTypeUpdateDTO
<form asp-action="UpdateConstructionType">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Update ConstructionType</h1>
        <hr />

        <input hidden asp-for="Cno" />

        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="Cno" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Cno" class="form-control" />
                <span asp-validation-for="Cno" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Ctype" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Ctype" class="form-control" />
                <span asp-validation-for="Ctype" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexConstructionType" asp-controller="ConstructionType" class="btn-primary btn form-control">Back To List</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Update" class="btn-success form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}